<main class='row'>
  <div class='col-2' id='game-data'>
    <a href="/newpost"><button type="button" class="btn btn-primary" id="create-post-button">ðŸª¶ Post a Comment ðŸª¶</button></a>

    <div id='game-stats'>
      <h2>About the Game</h2>
      <img id="background_image"/>
      <p>Genre: <span id="genre"></span> </p>
      <p>Release Date:  <span id="releaseDate"></span></p>
      <p>Platforms:  <span id="platform"></span></p>
      <p>Tags: <span id="tags"></span></p>
    </div>

    <div id='related-games'>
      <h2>Similar Titles</h2>
      <ul>
        <li>DOTA</li>
        <li>League of Legends</li>
        <li>EverQuest</li>
        <li>Runescape</li>
      </ul>
    </div>

  </div>

  <div class='col-9 forum-section'>
    <h2>User Posts Destiny 2</h2>
    {{#each forum as |post| }}
    <div class='forum-post'>
      <a href="/post/{{post.id}}"><h4>{{post.title}}</h4></a>
      <p>{{post.content}}</p>
    </div>
    {{/each}}
  </div>
</main>
